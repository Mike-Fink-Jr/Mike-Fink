<% include ./../partials/header.ejs %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="section-container">
  <div class="container">
    <div class="row" style="padding-top:2vh; padding-left:2vw">
      <h1 class="h2">Contact me</h1>
    </div>
    <br>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
          <form action="/contact/submit" method="post" >
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <input type="email" class="form-control" id="email" name ="email" placeholder="Email">
                </div>
                <div class="form-group">
                  <input type="text" class="form-control" id="subject" name ="subject" placeholder="Subject">
                </div>
                <div class="form-group">
                  <textarea class="form-control" id="data" name="data" rows="5" placeholder="Enter your message"></textarea>
                </div>
                <button type="submit" value="send" class="btn btn-default btn-lg">Send</button>
              </div>
            </div>
            <br>
            <div style=" padding-left:1vw; padding-right:1vw;" class="row address-container" >
              <h3 style="padding-left: 1vw; padding-right:2vw;">Find me other places on the internet!</h3>
              <a style="padding-right:1vw;" href="http://www.facebook.com/" title="" class="fa-icon">
                <i class="fa fa-facebook"></i>
              </a>
              <a style="padding-right:1vw;"  href="http://www.instagram.com/mike_fink_jr" title="" class="fa-icon">
                <i class="fa fa-instagram"></i>
              </a>
              <a style="padding-right:1vw;" href="https://www.github.com/mike-fink-jr/" title="" class="fa-icon">
                <i class="fa fa-github"></i>
              </a>
              <a style="padding-right:1vw;" href="https://www.linkedin.com/in/michaelfinkjr" title="" class="fa-icon">
                <i class="fa fa-linkedin"></i>
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
